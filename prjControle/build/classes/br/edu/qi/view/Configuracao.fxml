<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.qi.controller.ConfiguracaoController">
    <stylesheets>
        <URL value="@app.css" />
    </stylesheets>
    <children>
        <StackPane prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER" spacing="50.0">
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <TextArea editable="false" prefHeight="130.0" prefWidth="600.0" stylesheets="@app.css" text="&#10;Configure o e-mail para no qual será enviado o Remetente dos E-mail!&#10;Lembrando que deverás informar qual é o servidor de envio." HBox.hgrow="SOMETIMES">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </TextArea>
                                    </children>
                                </HBox>
                                <VBox alignment="BASELINE_CENTER" spacing="20.0">
                                    <children>
                                        <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="29.0" prefWidth="600.0">
                                            <children>
                                                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="83.0" text="Email" />
                                                <TextField fx:id="txtEmail" prefWidth="486.0" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" layoutX="10.0" layoutY="130.0" prefHeight="29.0" prefWidth="600.0">
                                            <children>
                                                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="83.0" text="Servidor" />
                                                <ComboBox fx:id="cbServidor" prefWidth="150.0" promptText="[Seleceione...]" />
                                                <TextField fx:id="txtId" disable="true" editable="false" opacity="0.0" prefHeight="29.0" prefWidth="336.0" />
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" spacing="20.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#handlerSalvar" prefWidth="100.0" text="Salvar" />
                                                <Button layoutX="110.0" layoutY="10.0" mnemonicParsing="false" onAction="#handlerCancelar" prefWidth="100.0" text="Cancelar" />
                                            </children>
                                            <padding>
                                                <Insets left="100.0" right="100.0" />
                                            </padding>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </opaqueInsets>
        </StackPane>
    </children>
</AnchorPane>
